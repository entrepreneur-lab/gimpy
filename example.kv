
<LoadDialog>:
    title: "Load settings from .json file"
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: './'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Load"
                on_release: root.load_file(filechooser.path, filechooser.selection)
            Button:
                text: "Cancel"
                on_release: root.cancel()
