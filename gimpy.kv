ScreenManager:
    SettingsScreen:
    ViewerScreen:

<SettingsScreen>:
    name: "settings"
    savepath: None

<ViewerScreen>:
    name: "viewer"
    imgdir: None

<LoadDialog>:
    title: "Load settings from .json file"
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: './'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Load"
                on_release:
                    app.root.get_screen("settings").load_settings(filechooser.selection[0])
                    root.dismiss()
            Button:
                text: "Cancel"
                on_release: root.dismiss()

<MySaveDialog>:
    title: "Save settings as .json file"
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: './'
        TextInput:
            id: dialog_savename
            size_hint_y: None
            height: 30
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Save"
                on_release:
                    app.root.get_screen("settings").savepath = root.save_file(filechooser.path)
                    app.root.get_screen("settings").save_settings()
                    root.dismiss()
            Button:
                text: "Cancel"
                on_release: root.dismiss()

<ImageDirDialog>:
    title: "Choose a directory of images to annotate"
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: './'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Ok"
                on_release:
                    app.root.get_screen("viewer").imgdir = filechooser.path
                    root.dismiss()
                    app.root.current = "viewer"
            Button:
                text: "Cancel"
                on_release: root.dismiss()
