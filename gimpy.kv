ScreenManager:
    SettingsScreen:
    ViewerScreen:
    FinalScreen:

<SettingsScreen>:
    name: "settings"
    savepath: None
    label_dict: None

<ViewerScreen>:
    name: "viewer"
    imgdir: None
    label_dict: None
    
<FinalScreen>:
    name: "final"
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            text: "Finished annotating this folder"
        Button:
            id: again
            text: "annotate again?"
            on_release:
                app.root.current = "settings"
        Button:
            id: close_app
            text: "close"
            on_release:
                app.stop()

<LoadDialog>:
    title: "Load settings from .json file"
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: './'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "load"
                on_release:
                    app.root.get_screen("settings").load_settings(filechooser.selection[0])
                    root.dismiss()
            Button:
                text: "cancel"
                on_release: root.dismiss()

<MySaveDialog>:
    title: "Save settings as .json file"
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: './'
        TextInput:
            id: dialog_savename
            size_hint_y: None
            height: 30
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "save"
                on_release:
                    app.root.get_screen("settings").savepath = root.save_file(filechooser.path)
                    app.root.get_screen("settings").save_settings()
                    root.dismiss()
            Button:
                text: "cancel"
                on_release: root.dismiss()

<ImageDirDialog>:
    title: "Choose a directory of images to annotate"
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: './'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "ok"
                on_release:
                    app.root.get_screen("viewer").imgdir = filechooser.path
                    app.root.get_screen("viewer").label_dict = app.root.get_screen("settings").label_dict
                    root.dismiss()
                    app.root.current = "viewer"
            Button:
                text: "cancel"
                on_release: root.dismiss()
