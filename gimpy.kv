ScreenManager:
    SettingsScreen:
    ViewerScreen:

<SettingsScreen>:
    name: "settings"     

<ViewerScreen>:
    name: "viewer"

<LoadDialog>:
    title: "Load settings from .json file"
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: './'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Load"
                on_release: root.load_file(filechooser.path, filechooser.selection)
            Button:
                text: "Cancel"
                on_release: root.cancel()

<SaveDialog>:
    title: "Save settings as .json file"
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: './'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Save"
                on_release: root.save_file(filechooser.path, filechooser.selection)
            Button:
                text: "Cancel"
                on_release: root.cancel()
